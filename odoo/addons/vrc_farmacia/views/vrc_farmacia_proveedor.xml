<odoo>
    <data>
        <record id="vrc_farmacia.proveedor_view_tree" model="ir.ui.view">
            <field name="name">vrc_farmacia.proveedor.tree</field>
            <field name="model">vrc_farmacia.proveedor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="telefono"/>
                </tree>
            </field>
        </record>

        <record id="vrc_farmacia.proveedor_view_form" model="ir.ui.view">
            <field name="name">vrc_farmacia.proveedor.form</field>
            <field name="model">vrc_farmacia.proveedor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Proveedor Farmacéutico"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="telefono"/>
                        </group>
                        <notebook>
                            <page string="Catálogo de Productos">
                                <field name="medicamento_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="precio"/>
                                        <field name="stock" widget="progressbar" options="{'max_value': 100}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="vrc_farmacia_proveedor_view_kanban" model="ir.ui.view">
            <field name="name">vrc_farmacia.proveedor.kanban</field>
            <field name="model">vrc_farmacia.proveedor</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>Teléfono: <field name="telefono"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>