<odoo>
    <data>
        <record id="vrc_farmacia.paciente_view_tree" model="ir.ui.view">
            <field name="name">vrc_farmacia.paciente.tree</field>
            <field name="model">vrc_farmacia.paciente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="email"/>
                </tree>
            </field>
        </record>
        <record id="vrc_farmacia.receta_view_form" model="ir.ui.view">
            <field name="name">vrc_farmacia.receta.form</field>
            <field name="model">vrc_farmacia.receta</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="estado" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="paciente_id"/>
                            <field name="fecha"/>
                        </group>
                        <notebook>
                            <page string="Medicamentos Recetados">
                                <field name="medicamento_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="precio"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="vrc_farmacia_receta_view_kanban" model="ir.ui.view">
            <field name="name">vrc_farmacia.receta.kanban</field>
            <field name="model">vrc_farmacia.receta</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>Paciente: <field name="paciente_id"/></div>
                                    <div>
                                        Medicamentos:
                                        <field name="medicamento_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>