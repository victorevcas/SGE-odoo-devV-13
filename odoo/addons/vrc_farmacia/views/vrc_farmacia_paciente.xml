<odoo>
    <data>
        <record id="vrc_farmacia.paciente_view_tree" model="ir.ui.view">
            <field name="name">vrc_farmacia.paciente.tree</field>
            <field name="model">vrc_farmacia.paciente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="edad"/>
                </tree>
            </field>
        </record>

        <record id="vrc_farmacia.paciente_view_form" model="ir.ui.view">
            <field name="name">vrc_farmacia.paciente.form</field>
            <field name="model">vrc_farmacia.paciente</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                    
                        <field name="imagen" widget="image" class="oe_avatar" options="{'preview_image': 'imagen'}"/>

                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del Paciente"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="dni"/>
                                <field name="edad"/>
                            </group>
                            <group>
                                <field name="email"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Historial de Recetas">
                                <field name="receta_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>
        <record id="vrc_farmacia_paciente_view_kanban" model="ir.ui.view">
            <field name="name">vrc_farmacia.paciente.kanban</field>
            <field name="model">vrc_farmacia.paciente</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="row">

                                    <div class="col-8">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                        <div>Edad: <field name="edad"/></div>
                                        <div>DNI: <field name="dni"/></div>
                                        <div>Email: <field name="email"/></div>
                                    </div>

                                    <div class="col-4 text-end">
                                        <field name="imagen" widget="image" class="oe_avatar"/>
                                    </div>

                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="vrc_farmacia_paciente_view_search" model="ir.ui.view">
            <field name="name">vrc_farmacia.paciente.search</field>
            <field name="model">vrc_farmacia.paciente</field>
            <field name="arch" type="xml">
                <search string="Buscar Pacientes">
                   
                    <field name="name"/>
                    <field name="dni"/>
                    <field name="email"/>

                    
                    <filter string="Mayores de 50"
                            name="mayores_50"
                            domain="[('edad','>',50)]"/>

                    <filter string="Con email"
                            name="con_email"
                            domain="[('email','!=',False)]"/>

                    
                    <group expand="0" string="Agrupar por">
                        <filter string="Edad"
                                name="group_by_edad"
                                context="{'group_by':'edad'}"/>
                    </group>
                </search>
            </field>
        </record>


    </data>
</odoo>