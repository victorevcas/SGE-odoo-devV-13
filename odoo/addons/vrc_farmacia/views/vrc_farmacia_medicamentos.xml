<odoo>
    <record id="vrc_farmacia_medicamento_view_tree" model="ir.ui.view">
        <field name="name">vrc_farmacia.medicamento.tree</field>
        <field name="model">vrc_farmacia.medicamento</field>
        <field name="arch" type="xml">
            <tree string="Listado de Medicamentos">
                <field name="name"/>
                <field name="precio"/>
                <field name="proveedor_id"/>
                <field name="stock" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="vrc_farmacia_medicamento_view_form" model="ir.ui.view">
        <field name="name">vrc_farmacia.medicamento.form</field>
        <field name="model">vrc_farmacia.medicamento</field>
        <field name="arch" type="xml">
            <form string="Formulario de Medicamento">
                <sheet>
                    <field name="imagen" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group name="info_precios" string="Informaci√≥n Econ√≥mica">
                            <field name="precio"/>
                            <field name="stock"/>
                        </group>
                        <group name="info_prov" string="Suministro">
                            <field name="proveedor_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Recetas que lo incluyen" name="recetas_med">
                            <field name="receta_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="vrc_farmacia_medicamento_view_kanban" model="ir.ui.view">
        <field name="name">vrc_farmacia.medicamento.kanban</field>
        <field name="model">vrc_farmacia.medicamento</field>
        <field name="arch" type="xml">
            <kanban default_group_by="proveedor_id">
                <field name="name"/>
                <field name="precio"/>
                <field name="proveedor_id"/>
                <field name="imagen"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">

                            <div class="o_kanban_image">
                                <img t-if="record.imagen.raw_value"
                                     t-att-src="kanban_image('vrc_farmacia.medicamento', 'imagen', record.id.value)"
                                     class="oe_kanban_avatar"/>
                            </div>

                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>

                                <div>
                                    üí∞ <field name="precio"/> ‚Ç¨
                                </div>

                                <div>
                                    üè¢ <field name="proveedor_id"/>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>