        </record>

        <record id="medicamento_demo_3" model="vrc_farmacia.medicamento">
            <field name="name">Nolotil</field>
            <field name="precio">3.20</field>
            <field name="stock">60</field> 
            <field name="proveedor_id" ref="proveedor_demo_2"/>
            <field name="imagen" type="base64" file = "vrc_farmacia/demo/images/nolotil.png"></field>
        </record>


        

        
        <record id="paciente_demo_1" model="vrc_farmacia.paciente">
            <field name="name">Cristiano Ronaldo</field>
            <field name="edad">40</field>
            <field name="dni">12345678A</field>
            <field name="email">cristiano.ronaldo@gmail.com</field>
            <field name="imagen" type="base64" file = "vrc_farmacia/demo/images/cristiano.png"></field>

        </record>

        <record id="paciente_demo_2" model="vrc_farmacia.paciente">
            <field name="name">Will Smith</field>
            <field name="edad">57</field>
