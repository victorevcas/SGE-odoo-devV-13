            <field name="imagen" type="base64" file = "vrc_farmacia/demo/images/will.png"></field>
        </record>

        <record id="paciente_demo_3" model="vrc_farmacia.paciente">
            <field name="name">Elon Musk</field>
            <field name="edad">54</field>
            <field name="dni">76859401W</field>
            <field name="email">elon.musk@gmail.com</field>
